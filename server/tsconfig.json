{
  "compilerOptions": {
    "target": "es2016",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "watch": true,
    "declaration": true,
    "sourceMap": true,
      "lib": [
        "es5",
        "es6",
        "dom",
        "es2015.core",
        "es2015.collection",
        "es2015.generator",
        "es2015.iterable",
        "es2015.promise",
        "es2015.proxy",
        "es2015.reflect",
        "es2015.symbol",
        "es2015.symbol.wellknown",
        "es2016",
        "esnext.asynciterable"
      ],
      "module": "commonjs",
      "outDir": "dist",
    },
    "files": [
      "index.ts",
      "./node_modules/@types/node/index.d.ts"
    ],
    "include": [
      "server/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}